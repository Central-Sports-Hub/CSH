// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int @id @default(autoincrement())
  email       String
  firstName   String
  lastName    String
  password    String
  isAdmin     Boolean
  comments    Comments[]
  ticket      Ticket[]
  order       Order[]
}

model Order {
  user_id     Int
  user        User @relation(fields: [userId], references: [id], onDelete: Cascade)       
  ticket_id   Int
  ticket      Ticket @relation(fields: [ticket_id], references: [id], onDelete: Cascade)
  created_at  DateTime
}

model Ticket {
  id          Int @id @default (autoincrement())
  event_id    Int 
  event       Event @relation(fields: [event_id], references: [id], onDelete: Cascade)
  owner_id    Int
  owner       User @relation(fields: [owner_id], references: [id] onDelete: Cascade)
  section     Int
  seat        Int
  row         Int
  price       Int
  date        Date
  order       Order[]
}

model Event {
  id          Int @id @default (autoincrement())
  venue_id    Int
  venue       Venues @relation(fields: [venue_id], references: [id] onDelete: Cascade)
  team1       String
  team2       String
  start_time  DateTime
  sport       String
  ticket      Ticket[]
}

model Venues {
  id          Int @aid @default (autoincrement())
  name        String
  location    String
  home_team   String
  capacity    Int
  img_url     String
  comments    Comments[]
  event       Event[]
}

model Comments {
  venue_id      Int
  venue         Venues @relation(fields: [venue_id], references: [id] onDelete: Cascade)
  user_id       Int
  user          User @relation(fields: [userId], references: [id], onDelete: Cascade)
  comment_text  String
  created_at    DateTime
  category      String
}